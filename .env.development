# Development Environment Variables
# These settings are optimized for local development

# Application
NODE_ENV=development
PORT=3001
APP_NAME="Sweet Shop Management System (Dev)"
APP_VERSION=1.0.0-dev

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:./server/database.sqlite
DATABASE_TYPE=sqlite

# PostgreSQL (for testing PostgreSQL locally)
# DATABASE_URL=postgresql://sweetshop_dev:dev_password@localhost:5432/sweetshop_dev
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=sweetshop_dev
# DATABASE_USER=sweetshop_dev
# DATABASE_PASSWORD=dev_password

# Authentication & Security (weaker for development)
JWT_SECRET=dev-jwt-secret-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=8

# CORS Configuration (allow all origins in dev)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5174
CORS_CREDENTIALS=true

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=50
AUTH_RATE_LIMIT_WINDOW_MS=60000

# Redis (optional for development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Email Configuration (use mailhog or similar for dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=dev@sweetshop.local

# Monitoring (disabled for development)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Admin Configuration
ADMIN_EMAIL=admin@sweetshop.com
ADMIN_PASSWORD=admin123
SUPER_ADMIN_IPS=127.0.0.1,::1,localhost

# External Services (use test keys)
PAYMENT_GATEWAY_KEY=test_key
PAYMENT_GATEWAY_SECRET=test_secret
PAYMENT_WEBHOOK_SECRET=test_webhook_secret

# Feature Flags (all enabled for testing)
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=false

# Performance (lower cache for development)
CACHE_TTL=60
SESSION_TTL=3600
COMPRESSION_LEVEL=1

# Development Tools (enabled)
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
ENABLE_QUERY_LOGGING=true
DEBUG=sweetshop:*
