# Production Environment Variables
# Copy this file to .env and update with your production values

# Application
NODE_ENV=production
PORT=3001
APP_NAME="Sweet Shop Management System"
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://sweetshop_user:secure_password_2025@localhost:5432/sweetshop
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sweetshop
DATABASE_USER=sweetshop_user
DATABASE_PASSWORD=secure_password_2025
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-2025-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_secure_2025
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@sweetshop.com

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Admin Configuration
ADMIN_EMAIL=admin@sweetshop.com
ADMIN_PASSWORD=admin123
SUPER_ADMIN_IPS=127.0.0.1,::1

# External Services
PAYMENT_GATEWAY_KEY=your-stripe-or-paypal-key
PAYMENT_GATEWAY_SECRET=your-payment-secret
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true

# Performance
CACHE_TTL=3600
SESSION_TTL=86400
COMPRESSION_LEVEL=6

# Development Tools (disable in production)
ENABLE_SWAGGER=false
ENABLE_DEBUG_ROUTES=false
ENABLE_QUERY_LOGGING=false
